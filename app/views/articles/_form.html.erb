<%= render 'shared/errors', obj: @article %>

<div class="row">
    <div class="col-xs-12">
        <%= form_for(@article,:html =>{class:"form-horizontal",role:"form"}) do |f| %>

        <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                <%=f.label :title%>
            </div>
            <div class="col-sm-8">
                <%=f.text_field :title, class:"form-control",autofocus:true,placeholder:"Title of Articles" %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                <%=f.label :description%>
            </div>
            <div class="col-sm-8">
                <%=f.text_area :description,rows:10, class:"form-control",autofocus:true,placeholder:"Body of Articles" %>
            </div>
        </div>



        <div class="form-group row">
            <div class="col-sm-8">
                <%= f.submit class:"col-sm-offset-3 btn btn-primary btn-lg" %>
            </div>
        </div>
        <div class="col-xs-4 col-xs-offset-4">
            [<%= link_to "Cancel request and return  to the listing page",articles_path%>]
        </div>
        <%end%>
    </div>
</div>