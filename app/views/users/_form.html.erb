<%= render 'shared/errors', obj: @user %>

<div class="row">
    <div class="col-xs-12">
        <%= form_for(@user,:html =>{class:"form-horizontal",role:"form"}) do |f| %>

        <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                <%=f.label :user %>
            </div>
            <div class="col-sm-8">
                <%=f.text_field :username, class:"form-control",autofocus:true,placeholder:"Enter User Name" %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                <%=f.label :email%>
            </div>
            <div class="col-sm-8">
                <%=f.email_field :email, class:"form-control",autofocus:true ,placeholder:"Enter Email" %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                <%=f.label :password%>
            </div>
            <div class="col-sm-8">
                <%=f.password_field :password, class:"form-control",autofocus:true,placeholder:"Enter Password" %>
            </div>
        </div>



        <div class="form-group row">
            <div class="col-sm-8">
                <%= f.submit(@user.new_record? ? "Signup" : "Update",class:"col-sm-offset-3 btn btn-primary btn-lg") %>
            </div>
        </div>
        <div class="col-xs-4 col-xs-offset-4">
            [<%= link_to "Cancel request and return  to the listing page",articles_path%>]
        </div>
        <%end%>
    </div>
</div>