
<%= render 'shared/errors', obj: @category %>


<%= form_for(@category,:html => {class:"form-horizontal",role:"form"}) do |f| %>

<div class="form-group row">
    <div class="col-sm-2 col-form-label">
        <%=f.label :name %>
    </div>
    <div class="col-sm-8">
        <%=f.text_field :name, class:"form-control",autofocus:true,placeholder:"Enter Category Name" %>
    </div>
</div>
<div class="form-group row">
    <div class="col-sm-8">
        <%= f.submit class:"col-sm-offset-3 btn btn-primary btn-lg" %>
    </div>
</div>
<div class="col-xs-4 col-xs-offset-4">
    [<%= link_to "Cancel request and return  to the listing page",articles_path%>]
</div>
<%end%>